{
  "name": "@josselinbuils/utils",
  "version": "0.2.0",
  "author": "Josselin BUILS",
  "license": "MIT",
  "description": "Light JS/TS utils library.",
  "scripts": {
    "add:staged": "exec-staged 'git add' '\\.(js|md|ts)$'",
    "copy:package-files": "cpx ./package.json dist && cpx ./README.md dist",
    "doc": "api-documenter",
    "build": "rimraf dist && rollup -c && yarn doc && rimraf dist/index.d.ts && yarn copy:package-files",
    "lint": "tslint -p tsconfig.json",
    "lint:staged": "exec-staged 'yarn lint' '\\.ts$'",
    "prettier:staged": "exec-staged 'prettier --write' '\\.(js|md|ts)$'",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:staged && yarn prettier:staged && yarn add:staged"
    }
  },
  "devDependencies": {
    "@josselinbuils/api-documenter": "^0.4.0",
    "@josselinbuils/exec-staged": "^0.1.1",
    "@josselinbuils/tslint": "^5.1.0",
    "@microsoft/api-extractor": "^7.12.0",
    "@rollup/plugin-multi-entry": "^4.0.0",
    "@rollup/plugin-typescript": "^6.1.0",
    "@types/jest": "^26.0.15",
    "cpx": "^1.5.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.33.3",
    "ts-jest": "^26.4.4",
    "tslib": "^2.0.3",
    "tslint": "^5.20.1",
    "typescript": "^4.0.5"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/josselinbuils/utils#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/josselinbuils/utils.git"
  },
  "bugs": {
    "url": "https://github.com/josselinbuils/utils/issues"
  },
  "prettier": {
    "singleQuote": true
  },
  "dependencies": {}
}
