{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "lib": ["esnext"],
    "module": "esnext",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "paths": {
      "*": ["src/*", "node_modules/*"]
    },
    "rootDir": "./",
    "sourceMap": true,
    "strict": true,
    "target": "esnext"
  },
  "exclude": ["src/**/*.test.ts"],
  "include": ["src"]
}
